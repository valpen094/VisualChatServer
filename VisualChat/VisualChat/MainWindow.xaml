<Window x:Class="VisualChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:VisualChat"
        Title="VisualChat" Width="406" Height="493" Loaded="Window_Loaded" Closing="Window_Closing">

    <Grid Margin="14,10,14,0" Height="453" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal" Height="55" Width="378" VerticalAlignment="Top" Margin="0,388,0,0" HorizontalAlignment="Center">
            <TextBox Margin="10" Height="34" Width="280" ScrollViewer.CanContentScroll="True" Cursor="" />
            <Button Content="送信" Click="OnRequestApi" Margin="10" Height="34"/>
        </StackPanel>
        <TextBox x:Name="ChatTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="358" Height="343" BorderThickness="1,1,1,1" Margin="0,40,0,0"/>
        <ComboBox x:Name="CategoryComboBox" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CategoryComboBox_SelectionChanged">
            <ComboBoxItem Content="General"/>
            <ComboBoxItem Content="Chroma"/>
            <ComboBoxItem Content="Ollama"/>
            <ComboBoxItem Content="Whisper"/>
        </ComboBox>
        <ComboBox x:Name="ApiComboBox" HorizontalAlignment="Left" Margin="135,0,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
