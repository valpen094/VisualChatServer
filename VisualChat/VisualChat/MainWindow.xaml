<Window x:Class="VisualChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:VisualChat"
        Title="VisualChat" Width="400" Height="300" Loaded="Window_Loaded">

    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="APIへリクエスト" Click="OnRequestApi" Width="200" Height="40" Margin="10"/>
            <TextBlock Name="ResponseText" Text="レスポンスがここに表示されます" TextWrapping="Wrap" Width="300" TextAlignment="Center"/>
        </StackPanel>
        <ComboBox HorizontalAlignment="Left" Margin="52,45,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="245,42,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
