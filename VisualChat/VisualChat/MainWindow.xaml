<Window x:Class="VisualChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:VisualChat"
        Title="VisualChat" Width="406" Height="448" Loaded="Window_Loaded" Closing="Window_Closing">

    <Grid Margin="14,0,14,14" Height="404" VerticalAlignment="Bottom">
        <StackPanel Orientation="Horizontal" Height="55" Width="378" VerticalAlignment="Top" Margin="0,339,0,0" HorizontalAlignment="Center">
            <TextBox Margin="10" Height="34" Width="280" ScrollViewer.CanContentScroll="True" Cursor="" />
            <Button Content="送信" Click="OnRequestApi" Margin="10" Height="34"/>
        </StackPanel>
        <TextBox x:Name="ChatTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="358" Height="329" Margin="0,10,0,0" BorderThickness="1,1,1,1"/>
    </Grid>
</Window>
